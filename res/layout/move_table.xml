<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dip"
    android:layout_height="380dip"
    android:background="@drawable/menu_back"
    >
    <TextView
     	android:id="@+id/move_text"
     	android:text ="@string/select_table"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 android:textColor ="#000000"
		 android:layout_marginLeft="5px"
		 android:layout_marginTop="5px"
		 android:textSize ="20px"
    />
      <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        >
	    <ListView
			 android:id="@+id/move_list"
			 android:layout_width="238px"
			 android:layout_height="250px"
			 android:layout_marginLeft="6px"
			 android:layout_marginTop="40px"
			 android:listSelector="@drawable/words_item"
		/>
	</LinearLayout>
		<LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        >
		<ImageButton
			 android:id="@+id/move_add"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
		 	 android:layout_marginLeft="55px"
		 	android:background ="@drawable/words_confirm"
			 />
		 <ImageButton
			 android:id="@+id/move_cancel"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
		 	 android:layout_marginLeft="15px"
		 	android:background ="@drawable/words_cancel"
			 />
	 </LinearLayout>
    </LinearLayout>