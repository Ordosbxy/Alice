<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="3dip">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout android:id="@+id/layout_resourceIndex"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerVertical="true">
			<TextView android:id="@+id/tv_resourceIndex"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#00ff44" android:layout_gravity="center"
				android:gravity="center" android:layout_margin="3dip" />
		</LinearLayout>
		<LinearLayout android:id="@+id/layout_resourceDelay"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentRight="true" android:layout_centerVertical="true">
			<TextView android:id="@+id/tv_resourceDelay"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginRight="5dip" android:textColor="#00ff66" />
		</LinearLayout>
		<LinearLayout android:id="@+id/layout_resourceName"
			android:orientation="vertical" android:layout_width="280dip"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/tv_resourceName"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="5dip" android:layout_marginRight="5dip"
				android:textSize="17.5sp" android:textColor="#00eeaa" />
		</LinearLayout>
		<LinearLayout android:id="@+id/layout_resourceImage" android:visibility="gone"
			android:orientation="vertical" android:layout_width="40dip"
			android:layout_height="wrap_content" android:layout_alignRight="@id/layout_resourceName">
			<ImageView android:id="@+id/tv_resourceImage"
				android:layout_width="40dip" android:layout_height="wrap_content"
				android:src="@drawable/shut" />
		</LinearLayout>
	</RelativeLayout>
	<TextView android:id="@+id/tv_resourcePath"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_margin="2dip" android:textSize="15.5sp"
		android:singleLine="true" />

</LinearLayout>